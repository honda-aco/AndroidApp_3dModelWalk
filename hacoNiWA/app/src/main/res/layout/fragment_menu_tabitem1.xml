<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <ImageView
                        app:srcCompat="@drawable/gate_droid1_left"
                        android:id="@+id/imageLeft1"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@color/colorPrimaryDark" />

                    <ImageView
                        app:srcCompat="@drawable/gate_kohaku1_left"
                        android:id="@+id/imageLeft2"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:layout_width="70dp"
                        android:layout_height="70dp" />

                    <ImageView
                        app:srcCompat="@drawable/gate_onepiece1_left"
                        android:id="@+id/imageLeft3"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:layout_width="70dp"
                        android:layout_height="70dp" />

                    <ImageView
                        app:srcCompat="@drawable/gate_waso1_left"
                        android:id="@+id/imageLeft4"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:layout_width="70dp"
                        android:layout_height="70dp" />

                    <ImageView
                        app:srcCompat="@drawable/gate_cardigan1_left"
                        android:id="@+id/imageLeft5"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:layout_width="70dp"
                        android:layout_height="70dp" />

                    <ImageView
                        app:srcCompat="@drawable/gate_jersey1_left"
                        android:id="@+id/imageLeft6"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:layout_width="70dp"
                        android:layout_height="70dp" />

                    <ImageView
                        app:srcCompat="@drawable/gate_witch1_left"
                        android:id="@+id/imageLeft7"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:layout_width="70dp"
                        android:layout_height="70dp" />

                    <ImageView
                        app:srcCompat="@drawable/gate_frog1_left"
                        android:id="@+id/imageLeft8"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:layout_width="70dp"
                        android:layout_height="70dp" />

                    <ImageView
                        app:srcCompat="@drawable/gate_frograin1_left"
                        android:id="@+id/imageLeft9"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:layout_width="70dp"
                        android:layout_height="70dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp"/>

                    <view
                        android:id="@+id/cell1"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        class="jp.maru.mrd.IconCell" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp"/>

                    <view
                        android:id="@+id/cell2"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        class="jp.maru.mrd.IconCell" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp"/>

                    <view
                        android:id="@+id/cell3"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        class="jp.maru.mrd.IconCell" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp"/>

                    <view
                        android:id="@+id/cell4"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        class="jp.maru.mrd.IconCell" />

                </LinearLayout>

            </ScrollView>

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#cccccc"/>
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#eeeeee"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <ImageView
                            app:srcCompat="@drawable/gate_droid1_top"
                            android:id="@+id/imageTop1"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@color/colorPrimaryDark"/>

                        <ImageView
                            app:srcCompat="@drawable/gate_droid2_top"
                            android:id="@+id/imageTop2"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:layout_width="90dp"
                            android:layout_height="90dp"/>

                        <ImageView
                            app:srcCompat="@drawable/gate_droid3_top"
                            android:id="@+id/imageTop3"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:layout_width="90dp"
                            android:layout_height="90dp"/>

                        <ImageView
                            android:id="@+id/imageTop4"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:layout_width="0dp"
                            android:layout_height="0dp" />

                        <ImageView
                            android:id="@+id/imageTop5"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:layout_width="0dp"
                            android:layout_height="0dp" />

                    </LinearLayout>

                </HorizontalScrollView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#cccccc"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#eeeeee"/>

                <include
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    layout="@layout/view_character_setting" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
